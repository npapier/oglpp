description	= 'Open(GL) (C)context management for (sdl)'
vcsUse		= 'no'
type		= 'shared'
version		= '0-0'
uses		= [ 'sdl' ]
libs		= [ 'glc 0-0' ]

from SCons.Script.SConscript import SConsEnvironment
sbf			= SConsEnvironment.sbf
platform	= sbf.myPlatform

if platform == 'win' :
	stdlibs = [ 'User32'  ]			# for GetDC and ReleaseDC
	stdlibs.append( 'opengl32' ) 	# for wglGetCurrentDC

deps		= [ '../glc' ]
